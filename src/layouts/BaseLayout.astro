---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

import "../styles/main.css";

interface Props {
  title: string;
  description: string;
  heroUrl: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>{title} | hmthien050209's blog</title>
  </head>
  <NavBar />
  <body>
    <main>
      <slot />
    </main>
  </body>
  <Footer />


</html>

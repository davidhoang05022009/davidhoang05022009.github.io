---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

import "../styles/main.css";
import BaseHead from "../components/BaseHead.astro";

interface Props {
  title?: string;
  description: string;
  heroUrl: string;
}

const { title = "Home", description, heroUrl } = Astro.props;
---

<html lang="en">
  <BaseHead
    title={title}
    description={description}
    heroUrl={heroUrl}
  />
  <NavBar />
  <body>
    <main>
      <slot />
    </main>
  </body><Footer />
</html>
